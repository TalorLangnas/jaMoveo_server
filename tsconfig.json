{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                       // ⬅️ ESModules instead of CommonJS
    "moduleResolution": "Bundler",            // ⬅️ Important for ESM-style imports
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./api/**/*.ts"
  ]
}
